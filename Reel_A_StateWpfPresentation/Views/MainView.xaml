                </StackPanel>-->
            </Border>
            <Grid
                    Height="410">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="36*"/>
                    <ColumnDefinition Width="104*"/>
                    <ColumnDefinition Width="91*"/>
                    <ColumnDefinition Width="163*"/>
                </Grid.ColumnDefinitions>
                <ListBox 
                    x:Name="List"
                    Grid.Column="0"
                    Margin="10,10,9.6,10"
                    Background="WhiteSmoke"
                    ItemsSource="{Binding EstateProperties}"
                    SelectedItem="{Binding SelectedProperty, Mode=TwoWay}"
                    IsSynchronizedWithCurrentItem="true"
                    ScrollViewer.VerticalScrollBarVisibility="Visible" Grid.ColumnSpan="4">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel
                                Orientation="Horizontal">
                                <Label
                                    Content="{Binding Dollars}"
                                    Padding="0,5"
                                    Style="{StaticResource LabelStyle}"/>
                                <Label
                                    Content="{Binding Address}"
                                    Width="150"
                                    Style="{StaticResource LabelStyle}"/>
                                <Label
                                    Content="{Binding City }"
                                    Padding="0,5"
                                    Style="{StaticResource LabelStyle}"/>
                                <Label
                                    Content="{Binding Zipcode}"
                                    Padding="0,5"
                                    Style="{StaticResource LabelStyle}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </StackPanel>

        <Border
            Grid.Row="2"
            Grid.Column="2"
            Style="{StaticResource InsideBorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height=".8*"/>
                    <RowDefinition Height=".2*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".3*"/>
                    <ColumnDefinition Width=".70*"/>
                </Grid.ColumnDefinitions>
                <StackPanel
                    Grid.Row="0"
                    Grid.Column="0">
                    <StackPanel
                        Margin="0,15,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Label
                        Content="Address:"
                        Style="{StaticResource MainLabelStyle}"/>
                        <TextBox
                            Text="{Binding WorkingProperty.Address}"
                            Style="{StaticResource TextBoxStyle}"/>
                    </StackPanel>
                    <StackPanel
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Label
                        Content="City:"
                        Style="{StaticResource MainLabelStyle}"/>
                        <TextBox
                            Text="{Binding WorkingProperty.City}"
                            Style="{StaticResource TextBoxStyle}"/>
                    </StackPanel>
                    <StackPanel
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Label
                        Content="State:"
                        Style="{StaticResource MainLabelStyle}"/>
                        <TextBox
                            Text="{Binding WorkingProperty.State}"
                            Style="{StaticResource TextBoxStyle}"/>
                    </StackPanel>
                    <StackPanel
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Label
                        Content="Price:"
                        Style="{StaticResource MainLabelStyle}"/>
                        <TextBox
                             
                            Text="{Binding WorkingProperty.Price}"
                            Style="{StaticResource TextBoxStyle}"/>

                    </StackPanel>
                    <StackPanel
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Label
                        Content="Zip Code:"
                        Style="{StaticResource MainLabelStyle}"/>
                        <TextBox
                            Text="{Binding WorkingProperty.Zipcode}"
                            Style="{StaticResource TextBoxStyle}"/>
                    </StackPanel>
                    <StackPanel
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Label
                        Content="Bedrooms:"
                        Style="{StaticResource MainLabelStyle}"/>
                        <TextBox
                            Text="{Binding WorkingProperty.Bedrooms}"
                            Style="{StaticResource TextBoxStyle}"/>
                    </StackPanel>
                    <StackPanel
                        HorizontalAlignment="right"
                        Orientation="Horizontal">
                        <Label
                        Content="Bathrooms:"
                        Style="{StaticResource MainLabelStyle}"/>
                        <TextBox
                            Text="{Binding WorkingProperty.Bathrooms}"
                            Style="{StaticResource TextBoxStyle}"/>
                    </StackPanel>
                    <StackPanel
                        HorizontalAlignment="right"
                        Orientation="Horizontal">
                        <Label
                        Content="Sqr Feet:"
                        Style="{StaticResource MainLabelStyle}"/>
                        <TextBox
                            Text="{Binding WorkingProperty.SqrFeet}"
                            Style="{StaticResource TextBoxStyle}"/>
                    </StackPanel>
                    <StackPanel
                        HorizontalAlignment="right"
                        Orientation="Horizontal">
                        <Label
                        Content="Fireplace:"
                        Style="{StaticResource MainLabelStyle}"/>
                        <TextBox
                            Text="{Binding WorkingProperty.Fireplace}"
                            Style="{StaticResource TextBoxStyle}"/>
                    </StackPanel>
                    <StackPanel
                        HorizontalAlignment="right"
                        Orientation="Horizontal">
                        <Label
                        Content="Pool:"
                        Style="{StaticResource MainLabelStyle}"/>
                        <TextBox
                            Text="{Binding WorkingProperty.Pool}"
                            Style="{StaticResource TextBoxStyle}"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel
                    Grid.Row="0"
                    Grid.Column="1">
                    <StackPanel
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">

                    </StackPanel>
                    <StackPanel 
                        Margin="0,10,0,0"
                        Orientation="Vertical"
                        HorizontalAlignment="Center">
                        <Label 
                            HorizontalAlignment="Left"
                            Content="Description: " 
                            Style="{StaticResource MainLabelStyle}"/>
                        <TextBox
                            HorizontalAlignment="Left"
                            Width="500"
                            Height="100"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"
                            VerticalContentAlignment="Top"
                            VerticalScrollBarVisibility="Visible"
                            Text="{Binding WorkingProperty.Description}" 
                            Style="{StaticResource TextBoxStyle}"/>
                        <Label 
                            HorizontalAlignment="Left"
                            Content="Comments: " 
                            Style="{StaticResource MainLabelStyle}"/>
                        <TextBox
                            HorizontalAlignment="Left"
                            Width="500"
                            Height="100"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"
                            VerticalContentAlignment="Top"
                            VerticalScrollBarVisibility="Visible"
                            Text="{Binding WorkingProperty.Comment}" 
                            Style="{StaticResource TextBoxStyle}"/>
                        <Label 
                            HorizontalAlignment="Left"
                            Content="Errors: " 
                            Style="{StaticResource ErrorHeaderStyle}"/>
                        <Border
                            Style="{StaticResource ErrorBorderStyle}">
                            <ListBox 
                                x:Name="Errors"
                                Background="WhiteSmoke"
                                ItemsSource="{Binding Errors}"
                                IsSynchronizedWithCurrentItem="true"
                                ScrollViewer.VerticalScrollBarVisibility="Visible"
                                Height="60">
                            </ListBox>
                        </Border>

                    </StackPanel>
                </StackPanel>
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2">
                    <StackPanel 
                        Orientation="Vertical"
                        HorizontalAlignment="right"
                        Margin="0,0,25,0">

                    </StackPanel>
                    <StackPanel 
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                        <Button 
                            x:Name="Button_Clear"   
                            Content="Clear"
                            Style="{StaticResource ButtonStyle}"
                            Command="{Binding Path=ClearEstateCommand}"/>
                        <Button 
                            x:Name="Button_View"   
                            Content="View"
                            Style="{StaticResource ButtonStyle}"
                            Command="{Binding Path=ViewEstateCommand}"/>
                        <Button 
                            x:Name="Button_Add"   
                            Content="Add"
                            Style="{StaticResource ButtonStyle}"
                            Command="{Binding Path=AddEstateCommand}"
                            Visibility="{Binding AddVisible, Converter={StaticResource BooleanToVisibility}}"/>
                        <Button 
                            x:Name="Button_Delete"   
                            Content="Delete"
                            Style="{StaticResource ButtonStyle}"
                            Command="{Binding Path=DeleteEstateCommand}"
                            Visibility="{Binding DeleteVisible, Converter={StaticResource BooleanToVisibility}}"/>
                        <Button 
                            x:Name="Button_Edit"   
                            Content="Update"
                            Style="{StaticResource ButtonStyle}"
                            Command="{Binding Path=UpdateEstateCommand}"
                            Visibility="{Binding UpdateVisible, Converter={StaticResource BooleanToVisibility}}"/>
                        <Button 
                            x:Name="Button_Quit"   
                            Content="Quit"
                            Style="{StaticResource ButtonStyle}"
                            Command="{Binding Path=ExitApplication}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Window>
