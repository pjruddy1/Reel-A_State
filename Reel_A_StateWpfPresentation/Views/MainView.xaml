                        <RadioButton 
                            Name="RadioButton_CitySort"
                            Content="City"
                            Style="{StaticResource RadioButtonStyle}"
                            Command="{Binding Path=SortListByCityCommand}"/>
                    </StackPanel>
                    <StackPanel
                        Grid.Column="1"
                        Margin="20,30,0,0"
                        Orientation="Vertical">

                        <RadioButton 
                            Name="RadioButton_BedroomSort"
                            Content="Bedrooom"
                            Style="{StaticResource RadioButtonStyle}"
                            Command="{Binding Path=SortListByBedroomCommand}"/>
                        <RadioButton 
                            Name="RadioButton_ZipSort"
                            Content="Zip Code"
                            Style="{StaticResource RadioButtonStyle}"
                            Command="{Binding Path=SortListByZipCommand}"/>
                    </StackPanel>
                    <StackPanel
                        Grid.Column="2"
                        Margin="20,30,0,0"
                        Orientation="Vertical">

                        <RadioButton 
                            Name="RadioButton_SqrFootSort"
                            Content="Sqr Feet"
                            Style="{StaticResource RadioButtonStyle}"
                            Command="{Binding Path=SortListBySqrFeetCommand}"/>
                        <RadioButton 
                            Name="RadioButton_StateSort"
                            Content="State"
                            Style="{StaticResource RadioButtonStyle}"
