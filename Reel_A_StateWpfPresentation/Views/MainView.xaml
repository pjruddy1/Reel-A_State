<Window x:Class="Reel_A_StateWpfPresentation.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reel_A_StateWpfPresentation.Views"
        mc:Ignorable="d"
        Title="Reel A State" 
        Height="575" 
        Width="1200"
        Background="Gray"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">



    <Window.Resources>
        <ControlTemplate x:Key="errorTemplate">
            <Border BorderBrush="Red" BorderThickness="2">
                <Grid>
                    <AdornedElementPlaceholder/>
                    <TextBlock 
                        Text="{Binding [0].ErrorContent}"
                        Foreground="Red"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Margin="0,0,2,0"/>
                </Grid>
            </Border>
        </ControlTemplate>
        <Style x:Key="InsideBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
        <Style x:Key="BorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
        </Style>
        <Style x:Key="ErrorBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Red"/>
            <Setter Property="BorderThickness" Value="3"/>

        </Style>
        <Style x:Key="HeaderStyle" TargetType="Label">
            <Setter Property="Foreground" Value="DarkBlue"/>
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Cursive"/>
        </Style>
        <Style x:Key="ErrorHeaderStyle" TargetType="Label">
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style x:Key="DetailLabelStyle" TargetType="Label">
            <Setter Property="Foreground" Value="DarkGoldenrod"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="RadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="DarkBlue"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="135"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Foreground" Value="DarkSlateGray"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style x:Key="MainLabelStyle" TargetType="Label">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
        <Style x:Key="SearchButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="DarkBlue"/>
            <Setter Property="Foreground" Value="WhiteSmoke"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="16"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="DarkSlateGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="DarkBlue"/>
            <Setter Property="Foreground" Value="WhiteSmoke"/>
            <Setter Property="Margin" Value="10,10,10,10"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="20"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="DarkSlateGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        
        <Label
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Style="{StaticResource HeaderStyle}"
            HorizontalAlignment="Center"
            Content="Reel A State"/>

        <StackPanel
            Grid.Column="1"
            Grid.Row="2"
            Orientation="Vertical">
            <Border Style="{StaticResource InsideBorderStyle}">
                <StackPanel
                    HorizontalAlignment="Center"
                    Margin="10,0,0,0">
                    <StackPanel
                        Margin="0,5,0,5"
                        Orientation="Horizontal">
                        <Button
                            Content="Search Address:"
                            Style="{StaticResource SearchButtonStyle}"
                            Command="{Binding Path=SearchAddressCommand}"/>
                        <TextBox
                            Text="{Binding SearchedAddress, ValidatesOnExceptions=True, UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource TextBoxStyle}"/>
                    </StackPanel>
                    <StackPanel
                        Orientation="Horizontal"
                        Margin="0,0,0,5">
                        <Button
                            Content="Sort By:"
                            Style="{StaticResource SearchButtonStyle}"
                            Command="{Binding Path=SortCommand}"/>
                        <ComboBox
                            Width="135"
                            SelectedItem="{Binding SortBy}"
                            ItemsSource="{Binding SortList}"
                            VerticalContentAlignment="Center"
                            HorizontalAlignment="Center">
                        </ComboBox>


                    </StackPanel>
                </StackPanel>

                <!--<StackPanel
                    Orientation="Horizontal">

                    <StackPanel
                        Margin="20,0,0,0"
                        Orientation="Vertical">
                        <Label Content="Sort By:" Style="{StaticResource LabelStyle}"/>
                        <RadioButton 
                            Name="RadioButton_PriceSort"
                            Content="Price"
                            Style="{StaticResource RadioButtonStyle}"
